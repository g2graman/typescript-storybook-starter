{
  "name": "typescript-storybook-starter",
  "version": "0.0.1",
  "description": "Sample starter using StoryShots, Jest and TypeScript",
  "main": "build/bundle.js",
  "browser": "build/bundle.min.js",
  "module": "build/bundle-es.min.js",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "test": "npx jest --no-cache --coverage",
    "build": "npx cross-env NODE_ENV=production npx rollup -c rollup.config.js",
    "storybook": "npm run storybook:start",
    "storybook:start": "npx start-storybook -p 6006 -c .storybook",
    "storybook:build": "npx build-storybook -s storybook-static -o .out",
    "storybook:deploy": "npx storybook-to-ghpages",
    "deploy": "npm run storybook:build && npm run storybook:deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g2graman/typescript-storybook-starter.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g2graman/typescript-storybook-starter/issues"
  },
  "homepage": "https://github.com/g2graman/typescript-storybook-starter",
  "dependencies": {
    "@storybook/react": "^3.4.2",
    "@vx/curve": "0.0.161",
    "@vx/gradient": "0.0.161",
    "@vx/mock-data": "0.0.161",
    "@vx/responsive": "0.0.161",
    "@vx/scale": "0.0.161",
    "@vx/shape": "0.0.161",
    "d3-array": "^1.2.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-spring": "^5.0.1",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.1.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/d3": "^5.0.0",
    "@types/d3-array": "^1.2.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.2",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux-logger": "^3.0.6",
    "@types/storybook__react": "^3.0.1",
    "babel-core": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.4",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.4.3",
    "lodash.mapvalues": "^4.6.0",
    "prop-types": "^15.6.1",
    "react-test-renderer": "^16.3.2",
    "require-dir": "^1.0.0",
    "ts-jest": "^22.4.4",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3",
    "webpack": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "\\.[jt]sx?$": "<rootDir>/node_modules/ts-jest/dist/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpe?g|png|svg)$": "<rootDir>/config/test-file-mock.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.([jt]sx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
     "lib": [
       "es5",
       "es6",
       "es7",
       "esnext",
       "dom" /* so we can refer to window without complaints */
     ],
    "allowJs": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
